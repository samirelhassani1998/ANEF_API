{
  "manifest_version": 3,
  "name": "ANEF Dossier Status (Text Only)",
  "version": "2.5",
  "description": "Affiche et interpr√®te le statut ANEF du dossier de naturalisation.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "https://administration-etrangers-en-france.interieur.gouv.fr/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://administration-etrangers-en-france.interieur.gouv.fr/*"
      ],
      "js": ["inject.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.js", "forge.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
